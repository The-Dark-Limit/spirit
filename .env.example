# ==============================================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ==============================================================

# Режим отладки (в production должен быть False)
# WARNING: Никогда не устанавливайте DEBUG=True в production!
DEBUG=True

# Секретный ключ приложения (должен быть длинным и сложным)
# Для генерации: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=SECRET_KEY_HERE

# Разрешенные хосты (для production обязательно укажите домены)
# Пример: ALLOWED_HOSTS=localhost,127.0.0.1,.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# Доверенные источники для CSRF (для production)
# Пример: CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://*.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Временная зона приложения
TIME_ZONE=Europe/Moscow

# Язык интерфейса
LANGUAGE_CODE=ru-ru

# ==============================================================
# НАСТРОЙКИ TELEGRAM БОТА
# ==============================================================

# Токен Telegram бота (обязательно)
# Получить у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Имя бота (необязательно, но рекомендуется)
TELEGRAM_BOT_USERNAME=your_bot_username

# Таймаут кэширования стратегий (в секундах)
TELEGRAM_STRATEGY_CACHE_TIMEOUT=60

# Максимальная длина ответа от модели Vikhr (в токенах)
TELEGRAM_VIKHR_MAX_LENGTH=512

# Параметр температуры для генерации (0.1-1.0)
TELEGRAM_VIKHR_TEMPERATURE=0.7

# ==============================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ==============================================================

# Тип базы данных (sqlite, postgres)
DATABASE_ENGINE=django.db.backends.postgresql

# Хост базы данных
POSTGRES_HOST=db

# Порт базы данных
POSTGRES_PORT=5432

# Имя базы данных
POSTGRES_DB=spirit

# Пользователь базы данных
POSTGRES_USER=spirit

# Пароль базы данных
POSTGRES_PASSWORD=spirit

# ==============================================================
# НАСТРОЙКИ REDIS И КЭШИРОВАНИЯ
# ==============================================================

# URL подключения к Redis
REDIS_URL=redis://redis:6379/0

# Таймаут кэширования стратегий (в секундах)
CACHE_TIMEOUT=60

# ==============================================================
# НАСТРОЙКИ СТАТИЧЕСКИХ И МЕДИА ФАЙЛОВ
# ==============================================================

# URL для статических файлов
STATIC_URL=/static/

# URL для медиа файлов
MEDIA_URL=/media/

# Путь к статическим файлам (для production)
# STATIC_ROOT=/app/staticfiles

# Путь к медиа файлам (для production)
# MEDIA_ROOT=/app/media

# ==============================================================
# НАСТРОЙКИ ЛОГГИРОВАНИЯ
# ==============================================================

# Уровень логгирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Формат логов
LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s

# Размер ротации лог-файлов (в байтах)
LOG_ROTATION_SIZE=10485760  # 10MB

# Количество ротируемых файлов
LOG_ROTATION_BACKUP_COUNT=5

# ==============================================================
# НАСТРОЙКИ ДЛЯ HEALTH CHECK
# ==============================================================

# Проверять ли базу данных в health check
HEALTH_CHECK_DB=True

# Проверять ли Redis в health check
HEALTH_CHECK_REDIS=True

# ==============================================================
# ПРИМЕР ПЕРЕМЕННЫХ ДЛЯ PRODUCTION
# ==============================================================

# Пример production настроек (раскомментируйте для использования)
# DEBUG=False
# ALLOWED_HOSTS=.yourdomain.com
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com
# STATIC_ROOT=/app/staticfiles
# MEDIA_ROOT=/app/media
